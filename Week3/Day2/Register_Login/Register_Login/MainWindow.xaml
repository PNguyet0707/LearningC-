<Window x:Class="Register_Login.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Register_Login"
        mc:Ignorable="d"
        Title="Register_Login" Height="450" Width="800">
    <StackPanel Orientation="Vertical">
        <StackPanel Orientation="Horizontal" Margin="10 10">
            <Label>Tên </Label>
            <TextBox Width="100" ></TextBox>

        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="10 10" >
            <Label >Email</Label >
            <TextBox Width="100" ></TextBox>

        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="10 10">
            <Label>Mật khẩu</Label>
            <TextBox Width="100" ></TextBox>

        </StackPanel>

        <Button Width="60" Height="50" HorizontalAlignment="Left" Margin="55 0 0 0 "> Đăng ký </Button>

    </StackPanel>
</Window>
